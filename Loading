  <script>
    // Simulate page loading and hide overlay
    window.addEventListener('load', function() {
      // For demo purposes, we'll keep the loading screen visible for 5 seconds
      // In a real app, you would hide this when your resources are loaded
      setTimeout(function() {
        const overlay = document.getElementById('loadingOverlay');
        overlay.style.opacity = '0';
        
        setTimeout(function() {
          overlay.style.display = 'none';
        }, 500);
      }, 5000);
    });
  </script>
